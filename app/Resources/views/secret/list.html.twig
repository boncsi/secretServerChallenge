{% extends 'secret/layouts/secret.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Hash</th>
                        <th scope="col">Secret</th>
                        <th scope="col">Remaining views</th>
                        <th scope="col">Created at</th>
                        <th scope="col">Expires at</th>
                    </tr>
                </thead>
                <tbody>
                    {% for secretItem in secretItems %}
                        <tr>
                            <th scope="row">{{ secretItem.id }}</th>
                            <td>{{ secretItem.hash }}</td>
                            <td>{{ secretItem.secret }}</td>
                            <td>{{ secretItem.remainingViews }}</td>
                            <td>{{ secretItem.createdAt.format('Y-m-d H:i:s') }}</td>
                            <td>{{ secretItem.expiresAt }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{%  endblock %}